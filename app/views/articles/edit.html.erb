<h1>Editing existing article</h1>

<% if @article.errors.any? %>
<h2><font color="red">The following errors prevented the article from getting updated</font></h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title%>
        <%= f.text_field :title%>
    </p>
    <p>
        <%= f.label :description%></br>
        <%= f.text_area :description%>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>